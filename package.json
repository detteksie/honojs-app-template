{
  "name": "hono-app-template",
  "version": "1.0.0",
  "description": "Template for HonoJS Web Application",
  "author": "S Abd Malik",
  "license": "MIT",
  "main": "src/main.ts",
  "scripts": {
    "start": "bun run .",
    "start:dev": "cross-env NODE_ENV=development bun run --hot --watch .",
    "format": "prettier -w \"{config,db,public,src,test}/**/*.{md,html,css,json,js,ts}\"",
    "lint": "eslint \"{config,db,src,test}/**/*.ts\" --fix",
    "seq": "env-cmd sequelize",
    "prepare": "husky"
  },
  "dependencies": {
    "@hono/swagger-ui": "^0.2.2",
    "@hono/zod-openapi": "^0.11.0",
    "@hono/zod-validator": "^0.2.1",
    "bcrypt": "^5.1.1",
    "hono": "^4.2.8",
    "http-errors": "^2.0.0",
    "husky": "^9.0.11",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.11.5",
    "pg-hstore": "^2.3.4",
    "sequelize": "^6.37.3",
    "sequelize-cli": "^6.6.2"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/bun": "latest",
    "@types/http-errors": "^2.0.4",
    "@types/jsonwebtoken": "^9.0.6",
    "@typescript-eslint/eslint-plugin": "^7.9.0",
    "@typescript-eslint/parser": "^7.9.0",
    "cross-env": "^7.0.3",
    "env-cmd": "^10.1.0",
    "eslint": "^8",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-prettier": "^5.1.3",
    "lint-staged": "^15.2.2",
    "prettier": "^3.2.5",
    "tsconfig-paths": "^4.2.0"
  },
  "repository": "https://github.com/ssamsara98/hono-app-template.git",
  "bugs": "https://github.com/ssamsara98/hono-app-template/issues",
  "homepage": "https://github.com/ssamsara98/hono-app-template#readme",
  "lint-staged": {
    "*.{md,html,css,json}": "prettier -w",
    "*.{js,ts}": "eslint --cache --fix"
  },
  "trustedDependencies": [
    "bcrypt",
    "es5-ext"
  ]
}
